<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance System</title>
</head>
<body>
    <h1>Attendence Here with Mobile Camera</h1>
    <form id="attendanceForm" action="/scan" method="POST">
        <input type="text" id="qrData" name="qrData" placeholder="Scan QR Code Here">
        <button type="button" onclick="openCamera()">Open Camera</button>
        <button type="submit" id="submitBtn" style="display: none;">Submit Attendance</button>
    </form>

    <p>
        Back camera update
        pop-up aupdate
    </p>

    <script>
        function openCamera() {
            const qrDataInput = document.getElementById('qrData');
            const submitBtn = document.getElementById('submitBtn');
            
            // Browser ke back camera ko open karna
            navigator.mediaDevices.enumerateDevices()
            .then(function(devices) {
                let backCameraId;
                devices.forEach(function(device) {
                    if (device.kind === 'videoinput' && device.label.includes('back')) {
                        backCameraId = device.deviceId;
                    }
                });

                if (backCameraId) {
                    navigator.mediaDevices.getUserMedia({ video: { deviceId: { exact: backCameraId } } })
                    .then(function (stream) {
                        const video = document.createElement('video');
                        document.body.appendChild(video);
                        video.srcObject = stream;
                        video.setAttribute('playsinline', true); // iOS support
                        video.play();

                        // QR code scan karne ka logic
                        const qrScanner = new Instascan.Scanner({ video: video });
                        qrScanner.addListener('scan', function (content) {
                            qrDataInput.value = content;
                            submitBtn.style.display = 'block'; // Attendance submit button ko dikhana
                            qrScanner.stop(); // QR code mil jaane par camera band karna
                            document.body.removeChild(video); // Video element remove karna
                        });
                        qrScanner.start();
                    })
                    .catch(function (err) {
                        console.error('Error accessing camera:', err);
                    });
                } else {
                    console.error('Back camera not found.');
                }
            })
            .catch(function(err) {
                console.error('Error enumerating devices:', err);
            });
        }

        // Submit button click hone par pop-up notification show karna
        document.getElementById('attendanceForm').addEventListener('submit', function(event) {
            event.preventDefault();
            alert('Attendance successfully marked!');
        });
    </script>
    
    <!-- Instascan QR code scanner library -->
    <script src="https://rawgit.com/schmich/instascan-builds/master/instascan.min.js"></script>
</body>
</html>
